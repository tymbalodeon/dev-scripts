# Add dependencies
@add *args:
    ./scripts/add.nu {{ args }}

# Build and install the application
@build *help:
    ./scripts/build.nu {{ help }}

# Remove generated files
@clean *args:
    ./scripts/clean.nu {{ args }}

# Run coverage report
@coverage *fail_under:
    ./scripts/coverage.nu {{ fail_under }}

# Show application dependencies
@dependencies *args:
    ./scripts/show-dependencies {{ args }}

# Install dependencies
@install *args:
    ./scripts/install {{ args }}

# Profile a command and view results
@profile *args:
    ./scripts/profile.nu {{ args }}

# Release a new version of the application
@release *args:
    ./scripts/release.nu {{ args }}

# Remove dependencies
@remove *dependencies:
    ./scripts/remove.nu {{ dependencies }}

# Run the application
@run *args:
    ./scripts/run.nu {{ args }}

# Open an interactive python shell
@shell *help:
    ./scripts/shell {{ help }}

# Run tests
@test *help:
    ./scripts/test.nu {{ help }}

# Update dependencies
@update *prod:
    ./scripts/upgrade {{ prod }}
