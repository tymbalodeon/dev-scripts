#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/benrosen/src/github.com/tymbalodeon/dev-scripts" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/benrosen/src/github.com/tymbalodeon/dev-scripts")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/benrosen/src/github.com/tymbalodeon/dev-scripts" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/benrosen/src/github.com/tymbalodeon/dev-scripts/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/benrosen/src/github.com/tymbalodeon/dev-scripts/.envrc" "/Users/benrosen/src/github.com/tymbalodeon/dev-scripts/.direnv"/*.rc
